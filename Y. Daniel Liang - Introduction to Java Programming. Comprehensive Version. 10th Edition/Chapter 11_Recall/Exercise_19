package pe_11_19;
import java.util.ArrayList;
import java.util.Arrays;
import java.util.Collections;
import java.util.Scanner;

class BinPack {
	public static void main(String [] args) {
		System.out.print("Enter the number of objects: ");
		Scanner input = new Scanner(System.in);
		String number = input.next();
		while(!isInteger(number)) {
			System.out.print("Gods, is it really that hard to enter an integer? Try again: ");
			number = input.next();
		}
		int quantityObj = Integer.parseInt(number);	
		Integer [] arrayWeights = new Integer [quantityObj];
		System.out.print("Enter the weights of the objects, between one and 10: ");

		for(int i = 0; i < arrayWeights.length; i++) {
			number = input.next();
			while(!isInteger(number)) {
				System.out.print("We need an INTEGER between one and 10. Try again: ");
				number = input.next();
				arrayWeights[i] = Integer.parseInt(number);
			}
			arrayWeights[i] = Integer.parseInt(number);
		}
		input.close();
		ArrayList<Integer> weights = new ArrayList<>(Arrays.asList(arrayWeights));
		//Integer [] arrayWeights = {1,2,3,4,5,5,6,8,9,10};
		//ArrayList<Integer> weights = new ArrayList<>(Arrays.asList(arrayWeights));
		Collections.sort(weights);
		int count = 1;
		while(!weights.isEmpty()) {
			System.out.print("Container " + count + " contains objects with weight " );
			ArrayList<Integer> container = getContainer(weights);
			for(Integer num: container)
				System.out.print(num + " ");
			System.out.println();
			count++;
		}
			
		
	}
	
	public static boolean isInteger(String str) {
		if(str.isEmpty())
			return false;
		for(int i =0; i < str.length(); i++)
			if(!Character.isDigit(str.charAt(i)))
				return false;
		return true;
	}
	
	static ArrayList<Integer> getContainer(ArrayList<Integer> weights ){
		
		ArrayList<Integer> container = new ArrayList <>();
		int capacity = weights.getFirst();
		container.add(weights.removeFirst());
		/*int idealPair = 10-capacity;
		if(weights.contains((idealPair))) {
			int index = weights.indexOf(idealPair);
			container.add(weights.remove(index));
			return container;
		}		*/		
		
		boolean filled = false;
		while(weights.size()>1 && !filled ) {
			for(int i = weights.size()-1; i > 0; i--) {
				if(capacity + weights.get(i) <= 10) {
					capacity =+ weights.get(i);
					container.add(weights.remove(i));
				}			
			}
			filled = true;
		}
		return container;		
	}
}
