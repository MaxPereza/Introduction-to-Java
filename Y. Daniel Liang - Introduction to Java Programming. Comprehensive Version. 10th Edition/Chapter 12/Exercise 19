package pe_12_19;

import java.net.MalformedURLException;
import java.net.URL;
import java.util.Scanner;

class CountWords {
	public static void main(String []args) {
		
		try {
			URL url = new URL("https://liveexample.pearsoncmg.com/data/Lincoln.txt.");
			int count = 0;
			Scanner input = new Scanner(url.openStream());
			while (input.hasNext()) {
				String strLine = input.nextLine();
				Scanner line = new Scanner(strLine);
				while(line.hasNext()) {
					String word = line.next();
					count++;
				}
				line.close();
			}
			System.out.println("The number of words in President "
					+ "Abraham Lincolnâ€™s Gettysburg address from website is " + count );
			}
		catch (MalformedURLException ex) {
			 ex.printStackTrace();
			 }
		catch (java.io.IOException ex) {
			System.out.println("I/O Errors: no such file");
		}
		
	}
}
