package pe_14_09;

import javafx.application.Application;
import javafx.geometry.Insets;
import javafx.geometry.Pos;
import javafx.scene.Scene;
import javafx.scene.layout.GridPane;
import javafx.scene.paint.Color;
import javafx.scene.shape.Arc;
import javafx.scene.shape.ArcType;
import javafx.scene.shape.Circle;
import javafx.stage.Stage;

public class CreateFourFans extends Application {
	@Override
	public void start(Stage primaryStage) {
		
		Scene scene = new Scene(new MyGridPane(), 250, 250);
		primaryStage.setTitle("four Fans");
		primaryStage.setScene(scene);
		primaryStage.show();
		
	}

	public static void main(String []args) {
		launch(args);
	}
}

class MyGridPane extends GridPane {
	private void paint() {
		getChildren().clear();
		
		int numberColumn = 2;
		int numberRow = 2;
		//setPadding(new Insets(15,10,15,10));
		setAlignment(Pos.CENTER);
		//setHgap(5.5);
		//setVgap(12.5);
		double columnHeight = getHeight()/numberColumn;
		double rowWidth = getWidth()/numberRow;
		double centerY = columnHeight/2;
		double centerX = rowWidth/2;
		double radius = getWidth()/(numberColumn*numberRow)-5;//-10
				
		for(int column =0; column < 2; column++) {			 
			for(int row = 0; row < 2; row++) {
				
				Circle circle = new Circle(centerX, centerY, radius);
				circle.setStroke(Color.BLACK);
				circle.setFill(null);
				Arc arc = new Arc(centerX, centerY,radius *0.4, radius *0.3, 180, 30);
				arc.setType(ArcType.ROUND);
				arc.setFill(Color.RED);
				add(circle, column, row);
				add(arc, column, row);
				centerY += rowWidth; 
				
			}
			centerX +=columnHeight;  
			
		}
	}
		
		@Override
		public void setWidth(double width) {
			super.setWidth(width);
			paint();
		}
		@Override
		public void setHeight(double height) {
			super.setHeight(height);
			paint();
		}
}
